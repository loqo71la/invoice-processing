@using InvoiceProcessing.Core.Models

<section>
    @if (Status != null)
    {
        <section class="mt-3 pt-2 border-top fw-light">
            Invoices processed with the Code <span class="status">@Status</span>
        </section>
    }
    @if (Invoices != null)
    {
        <section class="row row-cols-md-2 row-cols-xl-3 p-2">
            @foreach (var invoice in Invoices)
            {
                <div class="p-1">
                    <div class="card p-2 small">
                        <p class="fw-light mb-0">
                            UniqueId:
                            <span class="fw-bolder">@invoice.UniqueId</span>
                        </p>
                        <p class="fw-light mb-0">
                            RegistrationNumber:
                            <span class="fw-bolder">@invoice.RegistrationNumber</span>
                        </p>
                        <p class="fw-light mb-0">
                            DriveInDate:
                            <span class="fw-bolder">@invoice.DriveInDate</span>
                        </p>
                        <p class="fw-light mb-0">
                            DriveOutDate:
                            <span class="fw-bolder">@invoice.DriveOutDate</span>
                        </p>
                        <p class="fw-light mb-0">
                            Price:
                            <span class="fw-bolder">@invoice.Price</span>
                        </p>
                        <p class="fw-light mb-0">
                            CarparkId:
                            <span class="fw-bolder">@invoice.CarparkId</span>
                        </p>
                    </div>
                </div>
            }
        </section>
    }
</section>

@code {
    [Parameter]
    public string? Status { get; set; }
    [Parameter]
    public IEnumerable<InvoiceXml>? Invoices { get; set; }
}